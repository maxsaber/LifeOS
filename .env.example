# LifeOS Environment Variables
# Copy this file to .env and fill in the values

# Required
ANTHROPIC_API_KEY=sk-ant-...

# Vault Configuration
LIFEOS_VAULT_PATH=/path/to/your/obsidian/vault
LIFEOS_CHROMA_PATH=./chromadb
LIFEOS_PORT=8000

# CRM Configuration
# Your person ID (find by searching for yourself in the CRM)
LIFEOS_MY_PERSON_ID=
# Your work email domain for categorizing contacts (e.g., yourcompany.com)
LIFEOS_WORK_DOMAIN=

# Google OAuth (optional - for Calendar/Gmail/Drive)
# GOOGLE_CREDENTIALS_PERSONAL=./config/credentials-personal.json
# GOOGLE_CREDENTIALS_WORK=./config/credentials-work.json
# GOOGLE_TOKEN_PERSONAL=./config/token-personal.json
# GOOGLE_TOKEN_WORK=./config/token-work.json

# Notifications (optional - for sync failure alerts)
# LIFEOS_ALERT_EMAIL=your@email.com
